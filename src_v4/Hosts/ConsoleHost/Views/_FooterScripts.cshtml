    <script>
        $('.theme-picker').each(function () {
            $(this).click(function () {
                var theme = $(this).attr('data-theme');
                if(theme.toLowerCase() == 'enterprise') {
                    alert('The "Enterprise" theme is currently only available as a demo online at:\r\nhttp://northwind.mattjcowan.com/\r\nThis is because the Metronic admin theme has a license that limits re-distribution and requires a purchase first on ThemeForest.');
                    theme = 'default';
                }
                $.cookie('Theme', theme);
                location.reload(true);
            });
        });
    </script>