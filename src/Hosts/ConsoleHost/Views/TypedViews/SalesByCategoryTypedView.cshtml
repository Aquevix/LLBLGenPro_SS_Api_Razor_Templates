@inherits ViewPage<Northwind.Data.Services.TypedViewServices.SalesByCategoryCollectionResponse>
@{
    ViewBag.Title = "Sales By Category Browser";
    Layout = "_Layout";
}  
    
@section Header {
    <link rel="stylesheet" type="text/css" href="/css/plugins.css" />
    <script>
        var dtBaseUrl = '/views/salesbycategory';
        var dtAjaxUrl = '@Html.DataTableAjaxUrl("/views/salesbycategory/datatable")';
        var dtAjaxColumns = [
            { "bSortable": true, "bSearchable": true, "bVisible": true }, // CategoryId field
            { "bSortable": true, "bSearchable": true, "bVisible": true }, // CategoryName field
            { "bSortable": true, "bSearchable": true, "bVisible": true }, // ProductName field
            { "bSortable": true, "bSearchable": true, "bVisible": false } // ProductSales field

        ];
    </script>
}
@section Footer {
    <script type="text/javascript" charset="utf-8" language="javascript" src="/js/plugins.js"></script>
    <script type="text/javascript" charset="utf-8" language="javascript" src="/js/scripts.js"></script>
}
<div class="row-fluid">
    <div class="span3">
        @Html.Partial("_TypedViewNav", "/views/salesbycategory")
    </div>
    <div class="span9">
        <div class="well">
            <div class="entity-browser">
                <h1>
                    Sales By Category Browser
                </h1>
                This is where you browse your 'SalesByCategory' typed view.
                <a href="/views/salesbycategory/meta">
                    <span class="label label-info">
                        meta
                    </span>
                </a>&nbsp;
                <a href="/views/salesbycategory?format=xml">
                    <span class="label label-info">
                        xml
                    </span>
                </a>&nbsp;
                <a href="/views/salesbycategory?format=json">
                    <span class="label label-info">
                        json
                    </span>
                </a>
            </div>
        </div>
        <div class="row-fluid">
            <ul class="breadcrumb">
              <li><a href="/">Home</a> <span class="divider">/</span></li>
              <li><a href="/views">Browse</a> <span class="divider">/</span></li>
              <li class="active">Sales By Category</li>
            </ul>
        </div>
        <div class="row-fluid">
            <div class="span12">
                <div class="alert alert-info options-box" style="display:none;">
                    <h4>Options</h4>
                    Refine your query by using the <strong>filter</strong> query string parameter.
                    <br />Browse the <a href="/views/salesbycategory/meta"><span class="label label-info">meta</span></a>
                    data for this typed view to see what fields you can filter on.<br />
                    Use the grid controls below for <strong>paging</strong>, <strong>full-text search</strong>, <strong>sorting</strong> and <strong>column selection</strong>.<br />
                    All options are available in the <a href="/views/salesbycategory?format=xml"><span class="label label-info">xml</span></a> and 
                    <a href="/views/salesbycategory?format=json"><span class="label label-info">json</span></a> formats, refer to the <a href="http://www.mattjcowan.com/funcoding/2013/03/10/rest-api-with-llblgen-and-servicestack/" target="_blank"><strong>API documentation</strong></a>.
                    <p>
                    <strong>Sample (categories with ids 1 through 6 with a category name containing the letters 'on'):</strong>
                        </p>
                    <code>
                    filter=(^(categoryid:eq:1,2,3,4,5,6)(categoryname:lk:&#34;*on*&#34;))&amp;include=products
                    </code>
                </div>
                <div class="entity-row">
                    <div class="input-prepend input-append pull-left">
                        <span class="add-on"><i class="icon-info-sign"></i> <a href="javascript:void(0);" style="font-weight:bold;" onclick="$('.options-box').toggle();">/views/salesbycategory?</a></span>
                        <input id="filterText" type="text" value="@Html.DataTableAjaxUrl("").ToString().TrimStart('?')" placeholder="e.g.: filter=(^(Field1:eq:1,2)(Field2:lk:&#34;abc*&#34;))&amp;include=include1,include2">
                        <button class="btn" type="button" onclick="window.location='/views/salesbycategory?'+$('#filterText').val();">Go!</button>
                    </div>
                    <div class="pull-right">
                        <div class="btn-group col_vis_menu">
                            <a class="btn btn-inverse dropdown-toggle" href="#" data-toggle="dropdown">Columns <span class="caret"></span></a>
                            <ul id="dt_d_nav" class="dropdown-menu tableMenu">
                                <li><label class="checkbox" for="dt_col_1"><input id="dt_col_1" name="toggle-cols" value="0" checked="checked" type="checkbox"> Category Id</label></li>
                                <li><label class="checkbox" for="dt_col_2"><input id="dt_col_2" name="toggle-cols" value="1" checked="checked" type="checkbox"> Category Name</label></li>
                                <li><label class="checkbox" for="dt_col_3"><input id="dt_col_3" name="toggle-cols" value="2" checked="checked" type="checkbox"> Product Name</label></li>
                                <li><label class="checkbox" for="dt_col_4"><input id="dt_col_4" name="toggle-cols" value="3" type="checkbox"> Product Sales</label></li>

                            </ul>
                        </div>
                    </div>
                </div>
                <div class="entity-row" style="clear:both;width:100%;display:block;">
                    <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="entity-grid">
                        <thead>
                            <tr>
                                <th>Category Id</th>
                                <th>Category Name</th>
                                <th>Product Name</th>
                                <th>Product Sales</th>

                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td colspan="99">No matching records found</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
 